{
  "name": "qy-vscode-plugin",
  "displayName": "VSCode Plugin",
  "description": "VSCode辅助插件",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qy-vscode-plugin.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "qy-vscode-plugin.quickCommit",
        "title": "qiuye: Push: chore update"
      },
      {
        "command": "qy-vscode-plugin.customCommit",
        "title": "qiuye: Push: custom message"
      },
      {
        "command": "qy-vscode-plugin.openRepo",
        "title": "qiuye: 打开远程仓库地址"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "qy-vscode-plugin.quickCommit",
          "group": "navigation@-999"
        },
        {
          "when": "editorFocus",
          "command": "qy-vscode-plugin.customCommit",
          "group": "navigation@-998"
        },
        {
          "when": "editorFocus",
          "command": "qy-vscode-plugin.openRepo",
          "group": "navigation@-997"
        }
      ]
    }
  },
  "scripts": {
    "package": "npm run build && vsce package --no-dependencies",
    "build": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "npm run esbuild && npm run lint",
    "lint": "eslint src --ext ts --fix"
  },
  "devDependencies": {
    "@types/node": "~16.18.126",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.17.19",
    "eslint": "^8.57.1",
    "glob": "^8.1.0",
    "mocha": "^10.8.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "simple-git": "^3.27.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiuye-zhou/qy-vscode-plugin.git"
  },
  "keywords": [
    "vscode",
    "extension",
    "plugin"
  ],
  "author": "秋叶",
  "license": "MIT",
  "publisher": "qiuye-zhou"
}