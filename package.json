{
  "name": "qy-vscode-plugin",
  "displayName": "VSCode Plugin",
  "description": "VSCode辅助插件",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "type": "module",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qy-vscode-plugin.quickCommit",
        "title": "qiuye: Push: chore update"
      },
      {
        "command": "qy-vscode-plugin.customCommit",
        "title": "qiuye: Push: custom message"
      },
      {
        "command": "qy-vscode-plugin.openRepo",
        "title": "qiuye: 打开远程仓库地址"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "qy-vscode-plugin.quickCommit",
          "group": "navigation@-999"
        },
        {
          "when": "editorFocus",
          "command": "qy-vscode-plugin.customCommit",
          "group": "navigation@-998"
        },
        {
          "when": "editorFocus",
          "command": "qy-vscode-plugin.openRepo",
          "group": "navigation@-997"
        }
      ]
    }
  },
  "scripts": {
    "package": "npm run build && vsce package --no-dependencies",
    "build": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "pretest": "npm run esbuild && npm run lint",
    "lint": "eslint . --fix"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "3.6.2",
    "glob": "^11.0.0",
    "mocha": "^11.0.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "simple-git": "^3.27.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiuye-zhou/qy-vscode-plugin.git"
  },
  "keywords": [
    "vscode",
    "extension",
    "plugin"
  ],
  "author": "秋叶",
  "license": "MIT",
  "publisher": "qiuye-zhou"
}